clear in;
clear global g;
t_idx = 1;
global g;
g.nofFrames = 1000;
while t_idx <= g.nofFrames
    clear in;
    in.done = 0;
    in.label = 'run';
    in.method =  @FlowHS;
    in.bRecordFlow = 0;
    in.vidRes  = [128 128];
    in.targetFramerate = 24;
    in.movieType = 'ido_run.avi';
   
    in.startingTime = t_idx;
    in.endingTime  = t_idx + 19;
    t_idx = t_idx + 20; 
    
    vidProcessing(in);
    if in.endingTime >= g.nofFrames
       t_idx = g.nofFrames;
       disp("yes")
    end
    
    while g.t <= in.endingTime || g.done < 1
         pause(0.001);
    end
end
